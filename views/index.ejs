 <%- include header %> 
      <div class="index-cover"> 
       <img class="back-banner" src="/images/index-cover.jpg">
       <div class="banner">
       <img src="/images/logo.png">
       <p>带上好心情，发现新世界</p>
       </div> 
      </div>
    
      
        <div class="choose-list">
          <span>
             发现好游记
             <span class="item-chosen"></span>
          </span>|
          <span>我要写游记</span>
        </div>
       
       <div class="page-container clearfix">
         <% if (success) {%>
       <div><%= success %></div>
       <% } %>
       <% if (error) { %>
       <div><%= error %></div>
       <% } %>

        <% posts.forEach(function (post, index) { %>
        <article>  
             <!--封面--><div class="cover"><img src="<%= post.cover %>"></div>
             <a class="cover-avatar" href="/u/<%= post.name %>"><img class="avatar" src="<%= post.head %>"></a> 
                 <h6><a href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h6>  
              <p>
                  <!--作者--><a href="u/<%= post.name %>"><%= post.name %></a> | 
                  <!--日期--><%= post.time.minute %> 
              </p> 
           </article>
        <% }) %> 
      </div>
  <%- include paging %>
  <%- include footer %>
