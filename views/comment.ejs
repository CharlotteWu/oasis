  
<% post.comments.forEach(function (comment, index) { %>
<div class="comment"> 
  <p><a href="<%= comment.website %>"><%= comment.name %></a>
  <span > 回复于 <%= comment.time %></span></p>
  <p><%- comment.content %></p>
  </div>
<% }) %>
 

<form method="post" class="comment-area">
<% if (user) { %>
  姓名：<input class="name" type="text" name="name" value="<%= user.name %>" /><br />
  邮箱：<input class="email" type="text" name="email" value="<%= user.email %>" /><br />
  网址：<input class="website" type="text" name="website" value="/u/<%= user.name %>" /><br />
<% } else { %>
  姓名：<input class="name" type="text" name="name" /><br />
  邮箱：<input class="email" type="text" name="email" /><br />
  网址：<input class="website" type="text" name="website" value="http://" /><br />
<% } %>
  <textarea name="content" style="width:100%;"></textarea><br />
  <button class="coms" type="submit">留言</button>
</form>